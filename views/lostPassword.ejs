<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Lost Password</h1>
        <% include ./partials/messages %>
        <form action="/users/lostPassword" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block"> Submit</button>
        </form>
        <p class="lead mt-4">
          Login: <a href="/users/login">Login</a>
          <br>
          Register: <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>
  